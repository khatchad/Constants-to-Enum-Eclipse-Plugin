               id="org.eclipse.refactoring.ConvertFieldsToEnum.action"
               label="%ConvertConstantsToEnumLabel"
               menubarPath="edu.ohio_state.khatchad.refactoring.menu/convertConstantsToEnum"
               style="push"
               tooltip="%ConvertConstantsToEnumToolTip"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="%ConvertFieldsToEnum"
            id="org.eclipse.refactoring.category"
            name="%ConvertConstantsToEnumCategory"/>
      <command
            categoryId="org.eclipse.refactoring.category"
            description="%ConvertConstantsToEnumDescription"
            id="org.eclipse.convert.fields.to.enum"
            name="%ConvertConstantsToEnum"/>
   </extension>
